<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment2">

    <fragment
        android:id="@+id/splashFragment2"
        android:name="com.example.cryptocurrencypricesapp.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment2_to_coinsListFragment"
            app:destination="@id/coinsListFragment" />
    </fragment>

    <fragment
        android:id="@+id/coinsListFragment"
        android:name="com.example.cryptocurrencypricesapp.market.CoinsListFragment"
        android:label="fragment_coins_list"
        tools:layout="@layout/fragment_coins_list" >
        <action
            android:id="@+id/action_showDetail"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_coinsListFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_coinsListFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_coinsListFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment2" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.cryptocurrencypricesapp.coinsDetails.CoinsDetailsFragment"
        android:label="fragment_coins_details"
        tools:layout="@layout/fragment_coins_details">
        <argument
            android:name="selectedCoin"
            app:argType="com.example.cryptocurrencypricesapp.network.Coin"
            />
        <action
            android:id="@+id/action_detailFragment_to_coinsListFragment"
            app:destination="@id/coinsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cryptocurrencypricesapp.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_coinsListFragment"
            app:destination="@id/coinsListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.cryptocurrencypricesapp.notifications.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_notificationsFragment_to_coinsListFragment"
            app:destination="@id/coinsListFragment" />
        <action
            android:id="@+id/action_notificationsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_notificationsFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment2"
        android:name="com.example.cryptocurrencypricesapp.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment2_to_coinsListFragment"
            app:destination="@id/coinsListFragment" />
        <action
            android:id="@+id/action_settingsFragment2_to_notificationsFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_settingsFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>
